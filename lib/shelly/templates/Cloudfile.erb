<%= @code_name %>:
  ruby_version: 1.9.3 # 1.9.3, 1.9.2 or ree-1.8.7
  environment: production # RAILS_ENV
  monitoring_email: <%= @email %>
  domains:
    <%- @domains.each do |domain| -%>
    - <%= domain %>
    <%- end -%>
  servers:
    app1:
      size: <%= size %>
      thin: <%= thin %>
      # whenever: on
      # delayed_job: 1
    <%- @databases.each do |kind| -%>
    <%= kind %>:
      size: <%= size %>
      databases:
        - <%= kind %>
    <%- end -%>

